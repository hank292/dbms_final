<% include ./header %>
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/images/dealer.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>Add New Dealer</h1>
                    <hr class="small">
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <h2>Add New Dealer</h2>
            <!-- Contact Form - Enter your email address on line 19 of the mail/contact_me.php file to make this form work. -->
            <!-- WARNING: Some web hosts do not allow emails to be sent through forms to common mail hosts like Gmail or Yahoo. It's recommended that you use a private domain email address! -->
            <!-- NOTE: To use the contact form, your site must be on a live web host with PHP! The form will not work locally! -->
            <form name="sentMessage" action="/dealer" method="POST" id="contactForm" novalidate>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Dealer Name</label>
                        <input type="text" class="form-control" placeholder="Dealer Name" id="dealer_name" name="dealer_name" required data-validation-required-message="Please enter your dealer name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Dealer Phone</label>
                        <input type="text" class="form-control" placeholder="Dealer Phone" id="dealer_phone" name="dealer_phone"  required data-validation-required-message="Please enter your dealer phone.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Dealer Email</label>
                        <input type="text" class="form-control" placeholder="Dealer Email" id="dealer_email" name="dealer_email"  required data-validation-required-message="Please enter your dealer email.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Dealer Address</label>
                        <input type="text" class="form-control" placeholder="Dealer Address" id="dealer_address" name="dealer_address"  required data-validation-required-message="Please enter your dealer address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-default">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr>
<% include ./footer %>
