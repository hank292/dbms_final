<% include ./header %>

<header class="intro-header" style="background-image: url('/images/post-bg.jpg')">
       <div class="container">
           <div class="row">
               <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                   <div class="site-heading">
                       <h1>Edit Battery</h1>
                   </div>
               </div>
           </div>
       </div>
   </header>

   <!-- Post Content -->
   <div class="container">
   <div class="col-lg-12">
       <h2>Battery</h2>
       <div class="table-responsive">
           <table class="table table-bordered table-hover table-striped">
               <thead>
                 <tr>
                   <th>Name</th>
                   <th>Price</th>
                 </tr>
               </thead>

               <tbody>
                   <tr>
                       <td> <%= battery.battery_name %></td>
                       <td> <%= battery.battery_price %></td>

                   </tr>
               </tbody>
           </table>

       </div>
   </div>
   </div>

   <div class="container">
   <div class="col-lg-12">
     <form name="sentMessage" action="/battery" method="PUT" id="contactForm" novalidate>
       <div class="table-responsive">
           <table class="table table-bordered table-hover table-striped">
             <thead>
               <tr>
                 <th>Name</th>
                 <th>Price</th>

               </tr>
             </thead>
               <tbody>
                   <tr>
                       <td><input type="text" class="form-control" placeholder="Name" id="name" name="name" required data-validation-required-message="Please enter your name.">
                         </td>
                      <td><input type="text" class="form-control" placeholder="Price" id="price" name="price"  required data-validation-required-message="Please enter your price.">
                       </td>

                   </tr>

               </tbody>
           </table>
       </div>
       <div id="success"></div>
       <div class="row">
           <div class="form-group col-xs-12">
               <button type="submit" class="btn btn-default">Send</button>
           </div>
       </div>
   </form>
   </div>
   </div>



<% include ./footer %>
